{
  "name": "@side/npm-dependency-stats-action",
  "version": "0.0.0-development",
  "description": "Github action for getting stats about npm dependencies",
  "author": "Side Inc.",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint src/**/*.ts",
    "build": "rimraf dist && ncc build src/index.ts --license licenses.txt",
    "test": "yarn tsc && jest",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/exec": "1.1.1",
    "js-yaml": "4.1.0",
    "semver": "7.3.8"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.1",
    "@side/commitlint-config": "1.0.0",
    "@side/eslint-config-base": "1.0.0",
    "@side/eslint-config-jest": "1.0.0",
    "@side/prettier-config": "1.0.0",
    "@tsconfig/node16": "1.0.3",
    "@types/jest": "29.5.1",
    "@types/js-yaml": "4.0.5",
    "@types/node": "16.18.24",
    "@types/semver": "7.3.13",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "@vercel/ncc": "0.36.1",
    "eslint": "8.39.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "43.0.7",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.1",
    "prettier": "2.8.8",
    "rimraf": "5.0.0",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,yaml,yml,json,html,css,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/npm-dependency-stats-action.git"
  },
  "prettier": "@side/prettier-config"
}
