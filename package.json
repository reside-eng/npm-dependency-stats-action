{
  "name": "@side/npm-dependency-stats-action",
  "version": "0.0.0-development",
  "description": "Github action for getting stats about npm dependencies",
  "author": "Side Inc.",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "build": "rimraf dist && ncc build src/index.ts --source-map --license licenses.txt && rm dist/dependabot.yml",
    "test": "yarn tsc && jest"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "js-yaml": "^4.1.0",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@side/commitlint-config": "^0.1.9",
    "@side/eslint-config-base": "^0.13.0",
    "@side/eslint-config-jest": "^0.3.15",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.0.3",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^17.0.0",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "@vercel/ncc": "0.33.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/npm-dependency-stats-action.git"
  }
}
