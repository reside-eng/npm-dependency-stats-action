{
  "name": "@side/npm-dependency-stats-action",
  "version": "0.0.0-development",
  "description": "Github action for getting stats about npm dependencies",
  "author": "Side Inc.",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "eslint src/**/*.ts",
    "build": "rimraf dist && ncc build src/index.ts --license licenses.txt",
    "test": "yarn tsc && jest",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@actions/core": "2.0.3",
    "@actions/exec": "2.0.0",
    "semver": "7.7.4"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.2",
    "@side/commitlint-config": "1.1.1",
    "@side/eslint-config-base": "2.3.1",
    "@side/eslint-config-jest": "1.1.2",
    "@side/prettier-config": "1.1.0",
    "@swc/core": "1.15.11",
    "@swc/jest": "0.2.39",
    "@tsconfig/node24": "24.0.4",
    "@types/jest": "30.0.0",
    "@types/node": "20.11.30",
    "@types/semver": "7.7.1",
    "@typescript-eslint/eslint-plugin": "8.56.0",
    "@typescript-eslint/parser": "8.56.0",
    "@vercel/ncc": "0.38.4",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsdoc": "62.6.0",
    "eslint-plugin-prettier": "5.5.5",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "rimraf": "6.1.3",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,yaml,yml,json,html,css,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/npm-dependency-stats-action.git"
  },
  "prettier": "@side/prettier-config",
  "packageManager": "yarn@4.12.0",
  "private": true
}
