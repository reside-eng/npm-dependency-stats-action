{
  "name": "@side/npm-dependency-stats-action",
  "version": "0.0.0-development",
  "description": "Github action for getting stats about npm dependencies",
  "author": "Side Inc.",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "build": "rimraf dist && ncc build src/index.ts --source-map --license licenses.txt && rm dist/dependabot.yml",
    "test": "yarn tsc && jest"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "js-yaml": "^4.0.0",
    "semver": "^7.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@side/commitlint-config": "^0.1.3",
    "@side/eslint-config-base": "^0.11.2",
    "@side/eslint-config-jest": "^0.3.4",
    "@tsconfig/node14": "1.0.0",
    "@types/jest": "^26.0.20",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^15.0.0",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vercel/ncc": "0.28.5",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^35.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/npm-dependency-stats-action.git"
  }
}
