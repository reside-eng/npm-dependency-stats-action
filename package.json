{
  "name": "@side/npm-dependency-stats-action",
  "version": "0.0.0-development",
  "description": "Github action for getting stats about npm dependencies",
  "author": "Side Inc.",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint src/**/*.ts",
    "build": "rimraf dist && ncc build src/index.ts --license licenses.txt",
    "test": "yarn tsc && jest",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@actions/core": "1.6.0",
    "@actions/exec": "1.1.1",
    "js-yaml": "4.1.0",
    "semver": "7.3.7"
  },
  "devDependencies": {
    "@commitlint/cli": "16.3.0",
    "@side/commitlint-config": "0.1.10",
    "@side/eslint-config-base": "0.14.0",
    "@side/eslint-config-jest": "0.4.0",
    "@side/prettier-config": "0.0.0",
    "@tsconfig/node16": "1.0.3",
    "@types/jest": "27.5.2",
    "@types/js-yaml": "4.0.5",
    "@types/node": "16.11.41",
    "@types/semver": "7.3.10",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "@vercel/ncc": "0.34.0",
    "eslint": "8.17.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsdoc": "39.3.2",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "lint-staged": "13.0.2",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.5",
    "ts-node": "10.8.1",
    "typescript": "4.7.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,yaml,yml,json,html,css,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/npm-dependency-stats-action.git"
  },
  "prettier": "@side/prettier-config"
}
